{
	"compilerOptions": {
		
	
		"jsx": "react",
		"module": "ES2020",
	
		"esModuleInterop": true,
		"noEmitHelpers": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"strict": true,
		"allowUnusedLabels": true,
		"removeComments" : true ,
		"sourceMap" : true ,
		"inlineSources" : true ,
		"declaration" : true,
		
	
		"types" : ["node","gsap/types","types/global.d.ts","vite/client"],
		
		"target": "ES2020",
    "useDefineForClassFields": true,
    
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"/*": ["./*"],
		"*": [
			
			"node_modules/*",
			"src/types/*"
			
		  ]}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"**/node_modules",
		"**/.*/"
	],
	"atom": {
		"rewriteTsconfig": false
	},
	"compileOnSave": false
}
